  "description": "Guarda tus imagenes y archivos...",
  "main": "image.js",
  "repository": {
    "type": "git"
  },
  "scripts": {
    "tsc": "tsc --watch",
    "start": "sudo pm2 start ecosystem.config.js --env production",
    "build": "mkdir -p build && cp package.json build/ && cd build && npm install && cd .. && cp ./src/app.config ./build && mkdir -p ./build/uploads  && mkdir -p ./build/assets && cp -rf ./src/assets/* ./build/assets && tsc",
    "test": "echo \"Error: no hay tests para ejecutar\" && exit 1",
    "dev": "nodemon src/image.ts",
    "test-server": "sudo NODE_ENV=production node build/image.js"
  },
